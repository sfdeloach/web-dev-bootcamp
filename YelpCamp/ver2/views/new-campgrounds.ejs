<% include partials/header.ejs %>
    <div class="container">
        <div class="row">
            <h1 class="text-center">Create a new campground</h1>
            <div class="yelpcamp-form-center">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="location" placeholder="enter campground name...">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="imageUrl" placeholder="enter image URL...">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="enter description...">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg btn-block" type="submit" value="Submit">
                    </div>
                </form>
                <a href="/index">Return to campgrounds</a>
            </div>
        </div>
    </div>
<% include partials/footer.ejs %>