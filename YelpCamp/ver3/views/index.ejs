<% include partials/header.ejs %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>YelpCamp Locations</h1>
                <p>View the most beautiful campgrounds on the planet!</p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a>
            </div>
        </header>
        <div class="row text-center yelpcamp-wrap">
            <% campgrounds.forEach( function (campground) { %>
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground['image'] %>">
                        <div class="caption">
                            <h4><%= campground['name'] %></h4>
                        </div>
                        <a class="btn btn-info btn-xs" href="/campgrounds/<%= campground['_id'] %>" role="button">See details</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include partials/footer.ejs %>