<% include ../partials/header.ejs %>
    <div class="container">
        <div class="row">
            <h1 class="text-center">Create a new campground</h1>
            <div class="col-md-4 col-md-offset-4">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" placeholder="enter campground name...">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" placeholder="enter image URL...">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" placeholder="enter description...">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-lg btn-block" type="submit" value="Submit">
                    </div>
                </form>
                <a href="/campgrounds">Return to campgrounds</a>
            </div>
        </div>
    </div>
<% include ../partials/footer.ejs %>